# Using the base image
FROM ubuntu:22.04

#upgrading and Installing pip 
RUN apt-get update && \
    apt-get install -y python3-pip && \
    pip3 install --upgrade pip

RUN apt-get update && \
    apt-get install -y curl unzip && \
    curl -sSL -O https://chromedriver.storage.googleapis.com/112.0.5615.49/chromedriver_linux64.zip && \
    unzip chromedriver_linux64.zip && \
    rm chromedriver_linux64.zip && \
    mv chromedriver /usr/local/bin/ && \
    chmod +x /usr/local/bin/chromedriver

# Copy the Django project files
COPY . .

# Install the dependencies
RUN pip3 install -r requirements.txt

# Run any migrations
RUN python3 app/manage.py migrate

# Expose port 8000 for the Django development server
EXPOSE 8000

# Set the entrypoint to run the tests
RUN chmod +x test_entrypoint.sh

ENTRYPOINT ["./test_entrypoint.sh"]